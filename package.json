{
  "name": "@meshcaster/signalr-hubs",
  "version": "1.0.0",
  "description": "Reusable SignalR hub abstractions for React and React Native",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build",
    "test": "echo \"No tests yet\" && exit 0",
    "lint": "eslint src/**/*.{ts,tsx} --max-warnings 0",
    "lint:fix": "eslint src/**/*.{ts,tsx} --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "signalr",
    "websocket",
    "realtime",
    "react",
    "react-native",
    "typescript",
    "meshcaster"
  ],
  "author": "MeshCaster",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/MeshCaster/signalr-hubs.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "peerDependencies": {
    "@microsoft/signalr": ">=7.0.0",
    "react": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react-native": {
      "optional": true
    }
  },
  "devDependencies": {
    "@microsoft/signalr": "^8.0.0",
    "@types/react": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  }
}
